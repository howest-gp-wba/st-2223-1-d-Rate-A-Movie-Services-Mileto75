@model MoviesIndexViewModel

<h2>@ViewBag.PageTitle</h2>

<table class="table table-hover table-responsive">
    <tr>
        <th>Title</th>
        <th colspan="3">Action</th>
    </tr>
    @foreach(var movie in Model.Movies)
    { 
        <tr>
            <td>@movie.Item</td>

            <td colspan="3">
                <a asp-controller="Movies"
                   asp-action="Info"
                   asp-route-id="@movie.Id" class="btn btn-info">Info</a> ||
                <a asp-controller="Movies"
                   asp-action="Edit"
                   asp-route-id="@movie.Id" class="btn btn-primary">Edit</a> ||
                <a asp-controller="Movies"
                   asp-action="ConfirmDelete"
                   asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
<div>
    <a asp-controller="Movies"
       asp-action="Add"
       class="btn btn-outline-primary">Add a Movie</a>
</div>
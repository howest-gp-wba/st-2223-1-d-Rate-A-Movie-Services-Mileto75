@model CartIndexViewModel

@* show the contents of the cart *@
@if(Model.Items.Count() == 0)
{ 
    <div class="alert alert-primary" role="alert">
        No items in cart!
    </div>
}
else
{
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Item
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td><a class="btn btn-outline-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">+</a>
                            <a class="btn btn-outline-danger" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Id">-</a>
                        </td>
                    </tr>
                }
                <tr>
                    <td>Total</td>
                    <td>@Model.Total</td>
                </tr>
            </tbody>
        </table>
    </div>
}